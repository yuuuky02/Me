<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stats">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="날짜 선택"
            android:fontFamily="@font/leeseoyun"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1_st"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/calendar_month"
                android:backgroundTint="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv2_st"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#ECEBEB"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="기록 횟수"
            android:fontFamily="@font/leeseoyun"
            android:textSize="23sp" />

        <LinearLayout
            android:id="@+id/ll1_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv3_st"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="일상"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv4_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="0 회"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv5_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="운동"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv6_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="0 회"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv7_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="목표"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv8_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="0 회"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv9_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:text="여행"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv10_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="0 회"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv11_st"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="#ECEBEB"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="감정 횟수"
            android:fontFamily="@font/leeseoyun"
            android:textSize="23sp" />

        <LinearLayout
            android:id="@+id/ll5_st"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv1_st"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="145dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/very_good" />

            <TextView
                android:id="@+id/tv12_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="0 회"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll6st"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv2_st"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="145dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/neutral" />

            <TextView
                android:id="@+id/tv13_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="0 회"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll7_st"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv3_st"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="145dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/very_bad" />

            <TextView
                android:id="@+id/tv14_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="0 회"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv15_st"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="#ECEBEB"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="운동"
            android:fontFamily="@font/leeseoyun"
            android:textSize="23sp" />

        <LinearLayout
            android:id="@+id/ll8_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv16_st"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="총 운동시간"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv17_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="0 시간"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll9_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv18_st"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="총 달린거리"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv19_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="0 km"
                android:fontFamily="@font/leeseoyun"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>